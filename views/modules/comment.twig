<li class="comment comment-{{ comment.id }} comment-order-{{loop.index}}">

    <pre>
{# {{ dump(comment) }} #}
    </pre>

    <div class="comment__author vcard">

        <img src="{{ comment.author.avatar }}" class="avatar photo">

        <div class="says">

            <cite class="fn">
            
                <h1>URL: {{ comment.comment_author_url }}</h1>

                {% if (comment.comment_author_url) %}
    
                <a href="{{ comment.comment_author_url }}" title="" rel="external nofollow" class="url">
                    {{ comment.author.name }}
                </a>
    
                {% else %}
    
                {{ comment.author.name }}
    
                {% endif %}
            
            </cite>
            
            <span class="says">
                zegt:
            </span>

        </div>

    </div>
    
    <div class="comment-meta commentmetadata">
        
        <a href="{{ post.link }}#comment-{{ comment.id }}" title="">
            {{ comment.date }} om {{ comment.time }}
        </a>
    
    </div>

    <div class="comment__body">

        {% if comment.approved %}
        
            {{ comment.content | replace({'<iframe': '<div class="video-wrapper"><iframe', '</iframe>': '</iframe></div>', '<table>': '<table class="table">'})}}
            
        {% else %}
        
            <p>
                Deze reactie wacht op goedkeuring
            </p>
            
        {% endif %}

    </div>

    <ol class="comments-area__list">

    {% for child in comment.children %}

        <li class="comment comment-{{child.ID}} comment-order-{{loop.index}}">

            <div class="comment__author vcard">

                <img src="{{ child.author.avatar }}" class="avatar">

                <div class="says">

                    {% if (child.author.user_url) %}

                    <a href="{{ child.author.user_url }}">
                        {{ child.author.name }} zegt:
                    </a>

                    {% else %}

                    <span>
                        {{ child.author.name }} zegt:
                    </span>

                    {% endif %}

                    <br>

                    <a href="#comment-{{ child.id }}" id="{{ child.id }}" title="">
                        {{ child.date}}
                    </a>

                </div>

            </div>

            <div class="comment__body">

                {{ child.content | replace({'<iframe': '<div class="video-wrapper"><iframe', '</iframe>': '</iframe></div>', '<table>': '<table class="table">'})}}

            </div>

        </li>

    {% endfor %}

    </ol>

</li>
