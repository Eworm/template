{% extends "base/base.twig" %}

{% block content %}

    <div class="l-cs">

        <main role="main">

            <div class="main__content">

                {% do action('woocommerce_before_single_product') %}

                <article itemscope="itemscope" itemtype="http://schema.org/Product" class="single-product-details {{ post.class }}">

                    <div class="single-product-details__images">

                        <img loading="lazy" src="{{ post.thumbnail.src('shop_single') }}" alt="{{ post.title }}">

                    </div>

                    <div class="single-product-details__summary entry-summary">

                        {% do action('woocommerce_single_product_summary') %}

                    </div>

                    <meta itemprop="url" content="{{ post.link }}">

                </article>

                {% do action('woocommerce_after_single_product') %}

            </div>

        </main>

    </div>

{% endblock %}
